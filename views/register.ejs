<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include("partials/head") %>
     <link rel="stylesheet" href="/css/styles-login-register.css">    
    </head>
    <body>
        <header>
    
            <%- include("partials/header") %>
    
        </header>

    <main>
        
        <div class="register">
            

            <form action="/user/register" method="POST" enctype="multipart/form-data">
                <h3>Completa tus datos</h3>

                <% if (locals.errors && errors.firstName) { %>
                    <div class="text-danger">
                        <%= errors.firstName.msg %>
                    </div>
                <% } %> 
                
                <% if (locals.errors && errors.lastName) { %>
                    <div class="text-danger">
                        <%= errors.lastName.msg %>
                    </div>
                <% } %>
                
                <% if (locals.errors && errors.email) { %>
                    <div class="text-danger">
                        <%= errors.email.msg %>
                    </div>
                <% } %>
                <% if (locals.errors && errors.userName) { %>
                    <div class="text-danger">
                        <%= errors.userName.msg %>
                    </div>
                <% } %>
                <% if (locals.errors && errors.password) { %>
                    <div class="text-danger">
                        <%= errors.password.msg %>
                    </div>
                <% } %>
                <% if (locals.errors && errors.userImage) { %>
                    <div class="text-danger">
                        <%= errors.userImage.msg %>
                    </div>
                <% } %>

                <div class="user-data">
                    <label for="firstName">
                    <input type="text" id="firstName" name="firstName" placeholder="Nombre " value="<%= locals.oldData ? oldData.firstName : null %>">
                    </label>
                </div>
                <div class="user-data">
                    <label for="lastName">
                        <input type="text" id="lastName" name="lastName" placeholder="apellido " value="<%= locals.oldData ? oldData.lastName : null %>" required>
                    </label>

                </div>

                <div class="user-data">
                    <label for="email">
                    <input type="email" id="email" name="email" placeholder="email" value="<%= locals.oldData ? oldData.email : null %>" required>
                    </label>
                </div>

                <div class="user-data">
                    <label for="userName">
                        <input type="text" id="userName" name="userName" placeholder="Crea tu usuario " value="<%= locals.oldData ? oldData.userName : null %>" required>
                    </label>
                </div>
                <div class="user-data">
                    <label for="password">
                    <input type="password" id="password" name="password" placeholder="Password" value="<%= locals.oldData ? oldData.password : null %>" required>
                    </label>
                </div>

                
                    <div class="user-data">
                    <h5>Agregá una foto</h5>
                    <label for="user-avatar">
                    <input type="file" id="userImage" name="userImage" accept=".jpg, .png, .gif">
                    <span class="feedback"></span>
                    </label>
                </div>

              

                <div class="user-data-checkbox">
                    <label for="terms" class="terms">
                    <input type="checkbox" name="terms" required>
                    Acepto las bases y condiciones.
                    <a href="*">Ver bases y condiciones</a>
                    </label>
                    <label for="newsletter" class="newsletter">
                    <input type="checkbox" name="newsletter">
                    Deseo recibir información sobre eventos y promociones.
                    </label>
                    

                </div>

                <div class="prueba">
                    <div class="user-data-submit-button">          
                        <button type="submit"><span>Registrate</span></button>
                    </div>
                </div>
            </form>

        </div>

    </main>

    
    <footer>
        <%- include("partials/footer") %>
    </footer>
    <script src="../public/js/userRegister.js" type="text/html"></script>
</body>
</html>