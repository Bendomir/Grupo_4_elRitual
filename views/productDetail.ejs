<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include("partials/head") %>
     <link rel="stylesheet" href="/css/style-productDetail.css">    
    </head>
    <body>
        <header>
    
            <%- include("partials/header") %>
    
        </header>
    <main>

        <article class="copy">
            <a href="/">Inicio/</a>
            <a href="/tienda">Productos/</a>
            <p  class="products"> Remera AC/DC</p>
        </article>

        <article class="product">
            <img src=<%= product[0].images %> alt="">

            <div class="product-detail">
                <h2><%= product[0].name %></h2>
                <h1>$ <%= product[0].price %></h1>
                <p> <i class="far fa-credit-card"></i>    6 cuotas sin interes de $ <%= (product[0].price)/6 %> </p>        
                <h2> Talle XL </h2>

                <div class="admin">
                    <div class="size">
                        <label for="size">Eleg√≠ tu talle</label>
                        <select name="size" id="">
                            <option value="s">Small</option>
                            <option value="m">Medium</option>
                            <option value="l">Large</option>
                            <option value="l">Extra Large</option>
                        </select>
                    </div>
                    <div class="edit">
                        <a href="/product-admin/:id"><button>Editar</button></a>
                    </div>
                </div>
            </div>

        </article>

    </main>

    <footer>
            <%- include("partials/footer") %>
    </footer>


</body>
</html>